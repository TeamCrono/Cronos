<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SideLeftFragment" >

        <TextView
        android:id="@+id/profile_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Cronus!,"
         />

    <TextView
        android:id="@+id/profile_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_text1"
        android:text="Feel Free to sign into, or even start a new social media and add it to your Cronus profile." />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/test_profile_add_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook" />

        <Button
            android:id="@+id/test_profile_add_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Twitter" />

        <Button
            android:id="@+id/test_profile_add_pintrest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pintrest" />

        <Button
            android:id="@+id/test_profile_add_insta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instagram" />

  
    </LinearLayout>

</RelativeLayout>